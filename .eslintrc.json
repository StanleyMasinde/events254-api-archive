{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "arrow-parens":"error",
        "camelcase":"error",
        "line-comment-position":"error",
        "no-await-in-loop":"error",
        "no-var":"error",
        "no-empty":"error",
        "no-unreachable": "error",
        "require-jsdoc":"error",
        "valid-jsdoc":"error",
        "require-await":"error",
        "no-return-await":"error",
        "curly":"error",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
